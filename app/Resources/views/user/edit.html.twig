{% extends 'base.html.twig' %}
{% block container %}
    {{ form_start(user_edit) }}
    <div class="new_user">
        <div class="col-md-5 col-sm-5 col-lg-5 col-xs-12 ">
            <div class="form-group">
                <div class="cols-sm-10">
                    <div class="form-group row">
                        {{ form_label(user_edit.name) }}

                        {{ form_widget(user_edit.name, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="cols-sm-10">
                    <div class="form-group row">
                        {{ form_label(user_edit.surname) }}
                        {{ form_widget(user_edit.surname, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="cols-sm-10">
                    <div class="form-group row">
                        {{ form_label(user_edit.plainPassword.first) }}
                        {{ form_widget(user_edit.plainPassword.first, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="cols-sm-10">
                    <div class="form-group row">
                        {{ form_label(user_edit.plainPassword.second) }}
                        {{ form_widget(user_edit.plainPassword.second, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-5 col-sm-5 col-lg-5 col-xs-12 col-md-offset-1 col-sm-offset-1 col-lg-offset-1" style="padding-left:-5px;">
            <div class="form-group">
                <div class="cols-sm-10">
                    <div class="form-group row">
                        {{ form_label(user_edit.email) }}
                        {{ form_widget(user_edit.email, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="cols-sm-10">
                    <div class="form-group row">
                        {{ form_label(user_edit.phoneNumber) }}
                        {{ form_widget(user_edit.phoneNumber, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="cols-sm-10">
                    <div class="form-group row">
                        {{ form_label(user_edit.address) }}
                        {{ form_widget(user_edit.address, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="cols-sm-10">
                    <div class="form-group row">
                        {{ form_label(user_edit.birthday) }}
                        {{ form_widget(user_edit.birthday) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-sm-12 col-xs-12">
            <div id="button_create_project">
                <button  type="submit" class="btn btn-success">EDITAR</button>
            </div>
        </div>
    </div>

    {{ form_end(user_edit) }}
{% endblock %}