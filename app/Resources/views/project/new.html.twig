{% extends 'base.html.twig' %}
{% block container %}
<div class="new_project">
    {{ form_start(project_new) }}
    <div class="form-group row">
        {{ form_label(project_new.title, null, { 'label_attr':{ 'class': 'col-sm-2 col-form-label' }}) }}
        <div class="col-sm-10">
            {{ form_widget(project_new.title, {'attr':{'class':'form-control' }}) }}
        </div>
    </div>
    <div class="form-group row">
        {{ form_label(project_new.description, null, { 'label_attr':{ 'class': 'col-sm-2 col-form-label' }}) }}
        <div class="col-sm-10">
            {{ form_widget(project_new.description, {'attr':{'class':'form-control' }}) }}
        </div>
    </div>
    <div class="form-group row">
        {{ form_label(project_new.address, null, { 'label_attr':{ 'class': 'col-sm-2 col-form-label' }}) }}
        <div class="col-sm-10">
            {{ form_widget(project_new.address, {'attr':{'class':'form-control' }}) }}
        </div>
    </div>
    <div class="form-group row">
         {{ form_label(project_new.date_expiration, null, { 'label_attr':{ 'class': 'col-sm-2 col-form-label' }}) }}
         <div class="col-sm-10">
             {{ form_widget(project_new.date_expiration) }}
         </div>
     </div>
    <div class="form-group row">
        {{ form_label(project_new.categories, null, { 'label_attr':{ 'class': 'col-sm-2 col-form-label' }}) }}
        <div class="col-sm-10">
            {{ form_widget(project_new.categories, {'attr':{'class':'form-control' }}) }}
        </div>
    </div>
    <div class="row">
        <button type="submit" text-align="center" class="btn btn-success">CREAR</button>
    </div>

    {{ form_end(project_new) }}
</div>

{% endblock %}