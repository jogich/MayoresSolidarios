{% extends 'base.html.twig' %}
{% block container %}
    <div class="new_user">
        <div class="col-md-5 col-sm-5 col-lg-5 col-xs-12 ">
             <div class="form-group">
                 <div class="cols-sm-10">
                     <div class="form-group row">
                       <img src="http://placehold.it/500x300" alt="" width="300px" height="300px;">
                     </div>
                 </div>
             </div>
            <div class="form-group">
                <div class="cols-sm-10">
                    <div class="form-group row">
                        {{ project.location }}
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-5 col-sm-5 col-lg-5 col-xs-12 col-md-offset-1 col-sm-offset-1 col-lg-offset-1" style="padding-left:-5px;">
            <div class="form-group">
                <div class="cols-sm-10">
                    <div class="form-group row">
                        {{ project.description }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-sm-12 col-xs-12">
            <div id="button_info_project">
                <a href="{{ path('project') }}" type="button" class="btn btn-default" >VOLVER</a>
                <a href="{{ path('user-project-add', {user_id: app.user.id, project_id: project.id }) }}" style="margin-left:20px;" type="button" class="btn btn-success" >PARTICIPAR</a>
                <button  style="margin-left:20px;" type="button" class="btn btn-info" >INTERESADO</button>
                <button  style="margin-left:20px;" type="button" class="btn btn-primary">IMPRIMIR</button>
            </div>
        </div>
    </div>

{% endblock %}
